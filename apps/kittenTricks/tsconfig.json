{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/tsc-out",
    "target": "esnext",
    "moduleResolution": "bundler",
    "jsx": "react",
    "experimentalDecorators": true,
    "lib": [
      "es6",
      "dom"
    ],

    "skipLibCheck": true,

    "paths": {

      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ],
  "exclude": [
    "./node_modules"
  ],

}