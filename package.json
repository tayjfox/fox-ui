{
  "name": "meow-ui",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "nx run build",
    "build:theme": "node scripts/generate-tailwind-theme.mjs",
    "clean": "node ./scripts/clean.js",
    "dev": "nx run dev",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path .gitignore",
    "ios": "nx run ios",
    "nx:clean": "nx run clean && rm -rf node_modules",
    "storybook": "cd apps/storybook && cross-env EXPO_PUBLIC_STORYBOOK_ENABLED='true' expo start",
    "storybook:ios": "cd apps/storybook && cross-env EXPO_PUBLIC_STORYBOOK_ENABLED='true' expo start --ios"
  },
  "resolutions": {
    "expo-constants": "18.0.9",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.4",
    "tailwindcss": "^4.1.13",
    "typescript": "~5.9.2"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "nx": "21.6.3",
    "prettier": "^3.6.2",
    "workspace-root": "^3.3.1"
  },
  "packageManager": "yarn@4.10.3",
  "engines": {
    "node": ">=22"
  }
}
